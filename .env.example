# bchat Environment Variables Configuration
# Copy this file to .env and configure your API keys

# Google Gemini API (required if using provider: "gemini")
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude API (required if using provider: "claude")  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Chat log retention (default: 90 days)
CHAT_LOG_RETENTION_DAYS=90

# Optional: Debug mode (default: false)
CHAT_MONITOR_DEBUG=false

# Optional: Silent mode (default: true)
BCHAT_SILENT_MODE=true

# Note: bchat is configured to use Claude Sonnet 4 by default
