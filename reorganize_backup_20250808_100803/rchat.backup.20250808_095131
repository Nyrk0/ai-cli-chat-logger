#!/bin/bash
# Chat Monitor Launcher Script - Short Command
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ -f "$SCRIPT_DIR/src/chat_monitor.py" ]; then
    cd "$SCRIPT_DIR"
    python3 src/chat_monitor.py "$@"
elif [ -f "$SCRIPT_DIR/src/main.py" ]; then
    cd "$SCRIPT_DIR" 
    python3 src/main.py "$@"
else
    echo "Chat monitor not found. Please check installation."
    exit 1
fi
